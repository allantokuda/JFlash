<h1>Listing terms</h1>

<table>
  <tr>
    <th>English</th>
    <th>Romanji</th>
    <th>Kana</th>
    <th>Kanji</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.english %></td>
    <td><%= term.romanji %></td>
    <td><%= term.kana %></td>
    <td><%= term.kanji %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

